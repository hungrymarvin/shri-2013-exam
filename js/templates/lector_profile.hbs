<div class='lector lector__lector-expand'>
    <div class="lector__photo">
        <img {{bind-attr src="photo_url" alt="name"}}></img>
    </div>
    <div class="lector__info">
        <span class="lector__name">{{name}}</span>
        <span class="lector__location">Яндекс</span>
        <ul class="lector__social">
            {{#if yatech}}
                <li><a {{bind-attr href="yatech" }}><i class="icon-yandex-rect"></i>{{yatech}}</a></li>
            {{/if}}
        </ul>
    </div>
    <p class="lector__about">{{about}}</p>
    <ul class="lesson-list">
        {{#each lessons}}
            <li>
                {{render "lesson" this}}
            </li>
        {{/each}}
    </ul>
</div>