<div class='lesson-expand'>
    <div class="lesson-expand__info">
        <span class="lesson-expand__name">{{name}}</span>

        <div class="lesson-expand__date">{{ formatDate date }}</div>
    </div>
    {{ render 'lector' lector_id }}

    {{#if video_url}}
        <iframe
            {{{bind-attr src="video_url"}}} style="width: 100%; height: 320px;"></iframe>
    {{/if}}
    {{#if slides_url}}
        <iframe class="lesson-expand__slides" frameborder="0"
            {{{bind-attr src="slides_url"}}}></iframe>
    {{/if}}
</div>
{{view App.DisqusView}}